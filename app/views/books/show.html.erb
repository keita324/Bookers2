<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
                
        
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <div class="row">
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              </div>
            </tr>
            <tr>
	            <th>name</th>
          	  <th><%= @user.name %></th>
            </tr>
            <tr>
	            <th>introduction</th>
	            <th>
	              <%= @user.introduction %>
	            </th>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <%= link_to '',edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog edit_user_@user.id' %>
        </div>
        
        

        <h2 class="mt-3">New book</h2>
        <%= form_with model: @newbook, local:true do |f| %>

          <h4>Title</h4>
          <%= f.text_field :title %>

          <h4>Opinion</h4>
          <%= f.text_area :body %>

          <%= f.submit 'Create Book' %>

        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>

              <td>
                <%= link_to @book.title, book_path %>
              </td>

              <td>
                <%= @book.body %>
              </td>

              <% if @book.user_id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book)%></td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
              <% end %>

            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>